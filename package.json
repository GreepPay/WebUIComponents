{
  "name": "@greep/mobile-ui-components",
  "version": "0.0.1",
  "description": "UI Components for Greep Mobile Apps",
  "main": "src/index.ts",
  "scripts": {
    "build:style": "npx tailwindcss -i ./src/styles/index.css -o dist/library.css && cleancss -o dist/library.min.css dist/library.css",
    "build:style:watch": "npx tailwindcss -i ./src/styles/index.css -o dist/library.min.css --watch",
    "build:lib": "rimraf dist && webpack --mode=production --node-env=production && npm run build:style",
    "publish:lib": "npm run build:lib && npm publish",
    "watch": "webpack --watch",
    "build": "npm run build:lib --output dist",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production && npm run build:style",
    "serve": "webpack serve",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:generate": "npx vue-docgen"
  },
  "peerDependencies": {
    "vue": "^3.2.21",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@greep/logic": "file:../logic",
    "@tailwindcss/typography": "^0.5.9",
    "@types/editorjs__header": "^2.6.0",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.178",
    "@types/node": "^18.11.18",
    "@types/qrcode": "^1.5.5",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^2.0.0-rc.16",
    "@vue/vue3-jest": "^27.0.0-alpha.3",
    "autoprefixer": "^10.4.13",
    "babel-jest": "^27.3.1",
    "clean-css-cli": "^5.6.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "declaration-bundler-webpack-plugin": "^1.0.3",
    "eslint": "^8.4.1",
    "eslint-plugin-vue": "^8.2.0",
    "jest": "^27.3.1",
    "postcss": "^8.4.21",
    "postcss-loader": "^8.1.1",
    "prettier": "^2.8.1",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "sass-loader": "^13.0.2",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "vitepress": "^1.0.0-rc.4",
    "vlitejs": "^4.2.0",
    "vue-docgen-cli": "^4.79.0",
    "vue-styleguidist": "^4.72.4",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@awesome-cordova-plugins/core": "^6.3.0",
    "@capacitor-community/camera-preview": "^4.0.0",
    "@types/swiper": "^5.4.3",
    "@vitepress-demo-preview/component": "^2.3.2",
    "@vitepress-demo-preview/plugin": "^1.3.0",
    "@vue-pdf-viewer/viewer": "^2.5.1",
    "@vue/compiler-sfc": "^3.2.45",
    "axios": "^1.3.4",
